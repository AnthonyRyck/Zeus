@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="margin-10percent">

	<h3>Films recemment ajoutes</h3>

	<div class="flex">

		@foreach (var itemMovie in Model.MoviesOrdered)
		{
			<div class="imagePlusTitre">
				<div class="test">
					@if (string.IsNullOrEmpty(itemMovie.MovieTmDb.PosterPath))
					{
						<img src="images/VideoInconnu.jpg" />
					}
					else
					{
						<img id="imageVideo" src="@Url.Content("https://image.tmdb.org/t/p/w370_and_h556_bestv2" + @itemMovie.MovieTmDb.PosterPath)" />
					}
				</div>

				<div class="infoDate">
					@itemMovie.DateAdded.ToString("d")
				</div>

				<p class="title" id="title">
					@itemMovie.MovieTmDb.Title
				</p>
			</div>
		}
	</div>

</div>