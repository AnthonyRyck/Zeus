@page "/gestionuser"


<h3>Gestion des utilisateurs</h3>

<table class="table">

	<thead>
		<tr>
			<th>
				Nom utilisateur
			</th>
			<th>
				Email
			</th>
			<th>Rôle actuel</th>
			<th>Nouveau rôle</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in AllUsers)
		{
			<tr>
				<td>
					@item.User.UserName
				</td>
				<td>
					@item.User.Email
				</td>
				<td>
					@item.Role
				</td>
				<td>
					<select name="selectRole" @onchange="@(e =>  OnChangeRole(e, item.User.Id))">
						<option value=""></option>
						<option value="Member">Member</option>
						<option value="Manager">Manager</option>
						<option value="Admin">Admin</option>
						<option value="Inactif">Inactif</option>
					</select>
				</td>
				<td>
					<button class="btn btn-link"
							@onclick="(() => DeleteUser(item.User.Id))">
						Supprimer
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>


